@{
    ViewData["Title"] = "Home Page";
}
@model List<Student>
<div class="col-4"><h2>List of Students</h2></div>

<table class="table">
  <thead >
    <tr>
        <th scope="col">ID</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Course</th>
        <th scope="col">University</th>
        <th scope="col">Degree</th>
        <th scope="col">Date of Birth</th>
        <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  @if (Model.Count > 0)
  {
      foreach (var Student in Model)
      {
          if (Student.IsActive)
          {
              <tr>
                  <th scope="row">@Student.Id</th>
                  <td>@Student.Name</td>
                  <td>@Student.Surname</td>
                  <td>@Student.Course</td>
                  <td><a asp-controller="Home" asp-action="UniDetails" asp-route-Uni_Id=@Student.Uni_Id>@Student.Uni_Id</a></td>
                  <td>@Student.Degree</td>
                  <td>@Student.Date_Of_Birth</td>
                  <td><a asp-controller="Home" asp-action="DropModel" asp-route-id=@Student.Id>Delete</a></td>
              </tr>
          }
      }
  }
  </tbody>
</table>




