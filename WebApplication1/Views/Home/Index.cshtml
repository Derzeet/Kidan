@{
    ViewData["Title"] = "Home Page";
}
@model List<Student>
<div class="col-4"><h2>List of Students</h2></div>

<table class="table">
  <thead >
    <tr>
        <th scope="col"><a class="sort" asp-controller="Home" asp-action="Sort" asp-route-param="id">ID</a></th>
        <th scope="col"><a class="sort" asp-controller="Home" asp-action="Sort" asp-route-param="first">First</a></th>
        <th scope="col"><a class="sort" asp-controller="Home" asp-action="Sort" asp-route-param="last">Last</a></th>
        <th scope="col"><a class="sort" asp-controller="Home" asp-action="Sort" asp-route-param="course">Course</a></th>
        <th scope="col"><a class="sort" asp-controller="Home" asp-action="Sort" asp-route-param="uni">University</a></th>
        <th scope="col"><a class="sort" asp-controller="Home" asp-action="Sort" asp-route-param="degree">Degree</a></th>
        <th scope="col"><a class="sort" asp-controller="Home" asp-action="Sort" asp-route-param="date">Date of Birth</a></th>
        <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  @if (Model.Count > 0)
  {
      foreach (var Student in Model)
      {
          if (Student.IsActive)
          {
              <tr>
                  <th scope="row">@Student.Id</th>
                  <td>@Student.Name</td>
                  <td>@Student.Surname</td>
                  <td>@Student.Course</td>
                  <td><a class="uni" asp-controller="Home" asp-action="UniDetails" asp-route-Uni_Id=@Student.Uni_Id>@Student.Uni_Id</a></td>
                  <td>@Student.Degree</td>
                  <td>@Student.Date_Of_Birth</td>
                  <td><a class="delete" asp-controller="Home" asp-action="DropModel" asp-route-id=@Student.Id>&#10005;</a></td>
              </tr>
          }
      }
  }
  </tbody>
</table>




